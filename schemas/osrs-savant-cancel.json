{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "order_id": {
        "type": "string",
        "description": "The unique identifier for the order being canceled"
      },
      "time": {
        "type": "string",
        "format": "date-time",
        "description": "The timestamp when the cancel was recorded"
      },
      "reason": {
        "type": "string",
        "description": "The reason for the cancel"
      }
    },
    "required": ["order_id", "time", "reason"]
  }